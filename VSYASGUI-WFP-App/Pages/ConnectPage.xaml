<Page x:Class="VSYASGUI_WFP_App.Pages.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSYASGUI_WFP_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnectPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1"  Grid.Column="1">
            <Label Content="VS YAS GUI" FontWeight="Bold"/>
            <Label Content="Vintage Story Yet Another Simple Graphical User Interface"/>
            <Separator Margin="0,0,0,20" Visibility="Hidden"/>
            <Label Content="Enter connection details:"/>
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0" Content="Server API Key"></Label>
                <ComboBox x:Name="APIKeyComboBox" Grid.Column="1" IsEditable="True" Margin="0,0,0,5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Grid.Column="0" Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Label Grid.Column="0" Grid.Row="1" Content="Server HTTP Endpoint Address"></Label>
                <ComboBox x:Name="EndpointComboBox" Grid.Column="1" Grid.Row="1" IsEditable="True" Margin="0,0,0,5"/>
            </Grid>
            
        <Button x:Name="ConnectButton" Content="Connect" Width="200" Click="OnConnectButton_Click"/>
        
        </StackPanel>


    </Grid>
</Page>
