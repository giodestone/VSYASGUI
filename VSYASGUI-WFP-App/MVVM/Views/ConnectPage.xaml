<Page x:Class="VSYASGUI_WFP_App.Pages.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSYASGUI_WFP_App.Pages"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Connect Page"
      
      mc:Ignorable="d" 
      xmlns:viewModels="clr-namespace:VSYASGUI_WFP_App.MVVM.ViewModels"
      x:ClassModifier="internal"
      d:DataContext="{d:DesignInstance viewModels:ConfigPresenter}">

    <Page.DataContext>
        <viewModels:ConfigPresenter/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1"  Grid.Column="1">
            <Label Content="VS YAS GUI" FontWeight="Bold"/>
            <Label Content="Vintage Story Yet Another Simple Graphical User Interface"/>
            <Separator Margin="0,0,0,20" Visibility="Hidden"/>
            <Label Content="Enter connection details:"/>
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0" Content="Server API Key"></Label>
                <ComboBox x:Name="APIKeyComboBox" Grid.Column="1" Margin="0,0,0,5" 
                          IsEditable="True" 
                          IsReadOnly="False" 
                          IsTextSearchEnabled="True"
                          SelectedIndex="0"
                          ItemsSource="{Binding ApiKeyHistory}" 
                          Text="{Binding CurrentlySelectedApiKey, UpdateSourceTrigger=LostFocus}" >
                </ComboBox>

                <Label Grid.Column="0" Grid.Row="1" Content="Server HTTP Endpoint Address"></Label>
                <ComboBox x:Name="EndpointComboBox" Grid.Column="1" Grid.Row="1" Margin="0,0,0,5"
                          IsEditable="True" 
                          IsReadOnly="False" 
                          IsTextSearchEnabled="True"
                          SelectedIndex="0"
                          ItemsSource="{Binding EndpointHistory}" 
                          Text="{Binding CurrentlySelectedEndpoint, UpdateSourceTrigger=LostFocus}" >
 
                </ComboBox>
            </Grid>

            <Button x:Name="ConnectButton" Content="Connect" Width="200" Command="{Binding AddCurrentlySelectedToCollection}" Click="ConnectButton_Click"/>
        
        </StackPanel>


    </Grid>
</Page>
