<Page x:Class="VSYASGUI_WFP_App.MVVM.Views.ConnectionFailedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      xmlns:local="clr-namespace:VSYASGUI_WFP_App.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnectionFailedPage" DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="1">
            <StackPanel>
                <Image Source="{svgc:SvgImage Source=/Assets/Icons/LoadingIcon.svg, AppName=VSYASGUI-WFP-App}" Width="24" Height="24"/>
                <Label Content="Unable to connect" FontWeight="Bold"/>
                <Separator/>
                <Label x:Name="FailureReasonLabel" Content="{Binding FailureReason}"/>
                <Label x:Name="ResolutionSuggestionsLabel" Content="{Binding ResolutionSuggestions}"/>
                <Separator Visibility="Hidden"/>
                <Button Content="Return to Connection Screen" HorizontalAlignment="Center" Width="160" Click="ReturnButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
