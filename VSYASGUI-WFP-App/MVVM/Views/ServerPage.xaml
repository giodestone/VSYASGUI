<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSYASGUI_WFP_App.MVVM.Views"
      xmlns:UserControls="clr-namespace:VSYASGUI_WFP_App.UserControls" x:Class="VSYASGUI_WFP_App.MVVM.Views.ServerPage"
      xmlns:viewModels="clr-namespace:VSYASGUI_WFP_App.MVVM.ViewModels"
      x:ClassModifier="internal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Server Page"
      Loaded="Page_Loaded">
    <Page.DataContext>
        <viewModels:ConnectionPresenter/>
    </Page.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="Overview">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <UserControls:ServerConsole Grid.Row="0" Grid.Column="0" Margin="0,0,0,1"
                                                DataContext="{Binding Mode=OneWay}"/>
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <Label>CPU Usage %</Label>
                        <Label Content="{Binding Path=CpuUsagePercentage}"/>
                        <Separator/>
                        <Label>Memory Usage (MB)</Label>
                        <Label Content="{Binding Path=MemoryUsageMb}"/>
                        <Separator/>
                        <Label>Server Uptime</Label>
                        <Label Content="{Binding Path=ServerSecondsUptime}"/>
                        <Separator/>
                        <Label>Total World Playtime</Label>
                        <Label Content="{Binding Path=TotalWorldPlaytime}"/>
                        <Separator/>
                        <Label>Online Player Count</Label>
                        <Label Content="{Binding Path=OnlinePlayerCount}"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Console">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
