<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSYASGUI_WFP_App.MVVM.Views"
      xmlns:UserControls="clr-namespace:VSYASGUI_WFP_App.UserControls" x:Class="VSYASGUI_WFP_App.MVVM.Views.ServerPage"
      xmlns:viewModels="clr-namespace:VSYASGUI_WFP_App.MVVM.ViewModels"
      x:ClassModifier="internal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Server Page"
      Loaded="Page_Loaded">
    <Page.DataContext>
        <viewModels:ConnectionPresenter/>
    </Page.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="Overview">
                <Grid Background="#FFE5E5E5">
                    <UserControls:ServerConsole HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="402" Width="578"
                                                DataContext="{Binding Mode=OneWay}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Console">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
