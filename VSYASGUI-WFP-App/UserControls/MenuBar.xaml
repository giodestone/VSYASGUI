<UserControl x:Class="VSYASGUI_WFP_App.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSYASGUI_WFP_App.UserControls"
             xmlns:self="clr-namespace:VSYASGUI_WFP_App.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.CommandBindings>
        <CommandBinding Command="self:MenuBarCommands.ExitCommand" CanExecute="ExitCommand_CanExecute" Executed="ExitCommand_Executed" />
        <CommandBinding Command="self:MenuBarCommands.ClearConfigurationCommand" CanExecute="ClearConfigurationCommand_CanExecute" Executed="ClearConfigCommand_Executed"/>
    </UserControl.CommandBindings>
    <Menu>
        <MenuItem Header="_Application">
            <MenuItem Header="Clear Configuration" Command="self:MenuBarCommands.ClearConfigurationCommand"/>
            <MenuItem Header="_Exit" Command="self:MenuBarCommands.ExitCommand"/>
        </MenuItem>
    </Menu>
</UserControl>
